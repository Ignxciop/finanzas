# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://usuario:password@localhost:5432/finanzas?schema=public"

# JWT Configuration
# CRITICAL: Generate a secure random secret in production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Minimum 64 characters recommended
JWT_SECRET=your_super_secure_random_secret_key_here_minimum_64_characters_please_generate_new_one
JWT_EXPIRES_IN=7d

# CORS Configuration
# Allowed origin for cross-origin requests
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Nodemailer)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
# Enable 2FA first, then generate app password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM="Sistema de Finanzas <noreply@finanzas.com>"

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000
